{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "magic",
            "args": [
                "run",
                "mojo",
                "build",
                "-O0",
                "-g",
                "-D",
                "ASSERT=all",
                "${workspaceFolder}/src/main.mojo",
                "-o",
                "${workspaceFolder}/build/main"
            ],
            "presentation": {
                // "reveal": "silent",
                "echo": false,
                // "focus": true,
                "panel": "shared",
                "revealProblems": "never",
                "clear": true
            },
            "problemMatcher": {
                "owner": "mojo",
                "fileLocation": [
                    "absolute",
                    // "${workspaceFolder}"
                ],
                "pattern": [
                    {
                        "regexp": "^(.*):(\\d+):(\\d+):\\s+(error|warning|info|note):\\s+(.*)$",
                        "file": 1,
                        "line": 2,
                        "column": 3,
                        "severity": 4,
                        "message": 5
                    }
                ]
            }
        }
    ]
}